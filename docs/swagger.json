                ],
                "properties": {
                  "email": {
                    "description": "User email",
                    "type": "string",
                    "example": "john.doe@email.com"
                  },
                  "password": {
                    "description": "User password",
                    "type": "string",
                    "example": "P@ssw0rd123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
